- if (80 < rate)
  %h2{style: 'color: orange'} #{rate}%
  %p too higher
- if (50 < rate && rate <= 80)
  %h2{style: 'color: orange'} #{rate}%
  %p higher
- if (25 < rate && rate <= 50)
  %h3{style: 'color: yellow'} #{rate}%
  %p normal
- if (rate <= 25)
  %h2{style: 'color: aqua'} #{rate}%
  %p gj
